<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aecor.eurosports">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="e9d94b282925a83d299b04a73a8c80554f477f37" />

        <activity
            android:name=".activity.FavouritesActivity"
            android:label="@string/title_activity_favourites"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.LandingActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.SignInActivity" />
        <activity
            android:name=".activity.ClubsActivity"
            android:label="@string/clubs"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activity.ForgotPasswordActivity" />
        <activity android:name=".activity.ForgotPasswordOtpActivity" />
        <activity android:name=".activity.SettingsActivity" />
        <activity android:name=".activity.HelpActivity" />
        <activity android:name=".activity.PrivacyAndTermsActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity
            android:name=".activity.ImageOptionDialogActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".activity.NotificationAndSoundActivity" />
        <activity
            android:name=".activity.TeamActivity"
            android:label="TEAM" />
        <activity
            android:name=".activity.AgeCategoriesActivity"
            android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>