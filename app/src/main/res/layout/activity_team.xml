<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/team_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="wrap_content"
            android:paddingTop="6dp"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:src="@drawable/left_arrow_white" />
        <TextView
            android:id="@+id/team_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="TEAM"
            android:layout_toRightOf="@id/left_arrow"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_header"
        android:layout_above="@id/home_footer"
        android:layout_weight="1"
        android:fillViewport="true"
        android:isScrollContainer="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/team_view_league"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green_right_arrow"
                    android:layout_alignParentRight="true"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vieW_league_table"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="10dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/team_match_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matches"
                android:layout_below="@id/team_view_league"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@color/view_line"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"/>

            <RelativeLayout
                android:id="@+id/team_view_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/view_club_match"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/team_view_match"
                android:layout_below="@id/team_match_heading">

                <include
                    layout="@layout/layout_team_matches_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/home_footer"
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
