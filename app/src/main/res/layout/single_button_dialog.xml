<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_black_title"
        android:layout_height="50dp"
        android:background="@drawable/dialog_header_background"
        android:text="Title"
        android:textColor="@android:color/white"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message"
            style="@style/text_black_sub_title"
            android:layout_margin="@dimen/layout_margin"
            android:text="hello MAee" />

        <Button
            android:id="@+id/tv_positive_button"
            style="@style/text_black_sub_title"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_red_button"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
