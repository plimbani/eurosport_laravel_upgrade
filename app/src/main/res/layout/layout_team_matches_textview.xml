<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/team_match_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/white"
        android:background="@drawable/matches_date_background"
        android:text="18\nJul"/>

    <ImageView
        android:id="@+id/team_match_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/green_right_arrow"
        android:layout_marginRight="15dp"
        android:layout_alignBottom="@+id/team_match_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/team1_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/team_match_date"
        android:layout_toLeftOf="@id/team_match_link"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:text="3 team one"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/team2_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/team_match_date"
        android:layout_toLeftOf="@id/team_match_link"
        android:layout_below="@id/team1_score"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="0 team two"
        android:textColor="@color/black"
        android:layout_marginTop="-5dp"/>

    <TextView
        android:id="@+id/team_venue"
        style="@style/text_black_sub_title"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/team_match_date"
        android:layout_toLeftOf="@id/team_match_link"
        android:layout_below="@id/team2_score"
        android:layout_marginTop="8dp"
        android:text="Venue"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/team_match_date"
        android:layout_toLeftOf="@id/team_match_link"
        android:layout_below="@id/team_venue"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_match_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Match ID" />
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/team_age_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Age category" />
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/team_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Round" />
    </LinearLayout>
</RelativeLayout>