<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/lv_favourites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_favourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/favorites" />

            <TextView
                android:id="@+id/tv_favourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/favorites"
                android:textColor="@color/home_textview"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_tournament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tournament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/tournament" />

            <TextView
                android:id="@+id/tv_tournament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/tournament"
                android:textColor="@color/home_textview"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_clubs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_clubs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/clubs" />

            <TextView
                android:id="@+id/tv_clubs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/teams"
                android:textColor="@color/home_textview"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_age_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_age_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/age_categories" />

            <TextView
                android:id="@+id/tv_age_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/age_categories"
                android:textColor="@color/home_textview"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_user_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_user_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/user_settings" />

            <TextView
                android:id="@+id/tv_user_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/settings"
                android:textColor="@color/home_textview"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>