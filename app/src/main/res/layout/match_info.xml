<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"     android:background="@color/white"

    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        android:title="@string/CLUBS"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/layout_border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_team_score_1"
                        style="@style/text_black_title"
                        android:layout_weight="2"
                        android:textColor="@color/colorPrimary"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_team_score_2"
                        style="@style/text_black_title"
                        android:layout_weight="2"
                        android:textColor="@color/colorPrimary"
                        android:textSize="50sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_team_name_1"
                        style="@style/text_black_sub_title"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_team_name_2"
                        style="@style/text_black_sub_title"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_team_flag_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp" />

                        <TextView
                            android:id="@+id/tv_team_country_1"
                            style="@style/text_black_sub_title"
                            android:layout_width="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_team_flag_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp" />

                        <TextView
                            android:id="@+id/tv_team_country_2"
                            style="@style/text_black_sub_title"
                            android:layout_width="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/view_line"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_dateTime"
                    style="@style/text_black_small"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_age_and_group_info"
                    style="@style/text_black_small"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_match_id"
                    style="@style/text_black_small"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textColor="@color/gray" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_venue"
                style="@style/text_black_title"
                android:drawableRight="@drawable/green_right_arrow"
                android:gravity="left"
                android:padding="15dp"
                android:textColor="@color/green"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_footer" />
</LinearLayout>