<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        android:title="@string/CLUBS"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/layout_border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_team_score_1"
                        style="@style/text_black_title"
                        android:text="5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_team_name_1"
                        style="@style/text_black_title"
                        android:text="team name"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_team_flag_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp" />

                        <TextView
                            android:id="@+id/tv_team_country_1"
                            style="@style/text_black_title"
                            android:text="test" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_team_score_2"
                        style="@style/text_black_title"
                        android:text="5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_team_name_2"
                        style="@style/text_black_title"
                        android:text="team name"

                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_team_flag_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp" />

                        <TextView
                            android:id="@+id/tv_team_country_2"
                            style="@style/text_black_title"
                            android:text="test" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/view_line"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_dateTime"
                    style="@style/text_black_title"
                    android:text="18 July | 16:00" />

                <TextView
                    android:id="@+id/tv_age_and_group_info"
                    style="@style/text_black_title"
                    android:layout_marginTop="15dp"
                    android:text="18 July | 16:00" />

                <TextView
                    android:id="@+id/tv_match_id"
                    style="@style/text_black_title"
                    android:layout_marginTop="5dp"
                    android:text="18 July | 16:00" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_venue"
                style="@style/text_black_title"
                android:drawableRight="@drawable/ic_arrow_right_black"
                android:gravity="left"
                android:padding="15dp"
                android:text="18 July | 16:00" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_footer" />
</LinearLayout>