<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_header_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="1"
        android:src="@drawable/splash_screen_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/paddingleft_landing_page"
        android:layout_marginRight="@dimen/paddingleft_landing_page"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_email"
            style="@style/app_edittext"
            android:layout_marginTop="10dp"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_password"
            style="@style/app_edittext"
            android:layout_marginTop="10dp"
            android:hint="@string/password"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/signin"
            style="@style/text_black_title"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_disable"
            android:text="@string/sign_in" />

        <TextView
            android:id="@+id/tv_forgot_password"
            style="@style/text_white_title"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/forgot_password" />
    </LinearLayout>
</LinearLayout>
