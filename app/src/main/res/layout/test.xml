<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/team_match_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/circle_red"
            android:gravity="center"
            android:text="18\nJul"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/team_match_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/team_match_date"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/green_right_arrow" />

        <TextView
            android:id="@+id/team1_score"
            style="@style/text_black_title"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/team_match_link"
            android:layout_toRightOf="@id/team_match_date"
            android:gravity="left"
            android:text="team one" />

        <TextView
            android:id="@+id/team2_score"
            style="@style/text_black_title"
            android:layout_below="@id/team1_score"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/team_match_link"
            android:layout_toRightOf="@id/team_match_date"
            android:gravity="left"
            android:text="team one" />

        <TextView
            android:id="@+id/team_venue"
            style="@style/text_black_sub_title"
            android:layout_below="@id/team2_score"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/team_match_link"
            android:layout_toRightOf="@id/team_match_date"
            android:gravity="center_vertical"
            android:text="Venue"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_venue"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/team_match_link"
            android:layout_toRightOf="@id/team_match_date"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/team_match_id"
                style="@style/team_league_table_text"
                android:text="Match ID"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/team_age_category"
                style="@style/team_league_table_text"
                android:text="Age category"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/team_round"
                style="@style/team_league_table_text"
                android:text="Round"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/button_disable" />
</LinearLayout>