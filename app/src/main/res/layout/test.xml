<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/favourite_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:src="@drawable/globe" />

    <ImageView
        android:id="@+id/favourite_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:src="@drawable/heart_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/favourite_logo"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/favourite_imageview"
        android:layout_toRightOf="@id/favourite_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favourite_tournament"
            style="@style/text_black_title"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Hello World"
            android:textSize="21sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/favourite_date"
                style="@style/text_black_sub_title"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Start Date - End Date"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>