<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/favourite_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/globe"/>

    <ImageView
        android:id="@+id/default_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:src="@drawable/default_tournament"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/favourite_logo"
        android:layout_alignTop="@+id/favourite_logo"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/favourite_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:src="@drawable/heart_gray"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/favourite_logo"
        android:layout_alignTop="@+id/favourite_logo"
        android:layout_toLeftOf="@id/default_imageview"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/favourite_imageview"
        android:layout_toRightOf="@id/favourite_logo"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/favourite_logo">

        <TextView
            android:id="@+id/favourite_tournament"
            style="@style/text_black_title"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="21sp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:text="Hello World" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/favourite_date"
                android:gravity="center_vertical"
                style="@style/text_black_sub_title"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:text="Start Date - End Date"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>