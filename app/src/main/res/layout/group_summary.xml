<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_header" />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/view_line"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_group_table_title"
                style="@style/text_black_sub_title"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/group_26_league_table"
                android:textStyle="bold" />

            <TextView
                style="@style/text_black_sub_title"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/G"
                android:textStyle="bold" />

            <TextView
                style="@style/text_black_sub_title"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/plus_minus"
                android:textStyle="bold" />

            <TextView
                style="@style/text_black_sub_title"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/P"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_group_rows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/tv_view_full_league_table"
            style="@style/text_black_sub_title"
            android:layout_marginLeft="8dp"
            android:drawableRight="@drawable/green_right_arrow"
            android:gravity="left"
            android:padding="15dp"
            android:text="@string/view_league_table"
            android:textColor="@color/green"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/view_line"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                style="@style/text_black_sub_title"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/game_information"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_matches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/tv_view_all_club_matches"
            style="@style/text_black_sub_title"
            android:layout_marginLeft="8dp"
            android:drawableRight="@drawable/green_right_arrow"
            android:gravity="left"
            android:padding="15dp"
            android:text="@string/view_club_match"
            android:textColor="@color/green"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>

    <include
        android:id="@+id/home_footer"
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</LinearLayout>
